{% extends 'base.html.twig' %}

{% block title %}Confirmation de désinscription{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Confirmation de désinscription
            </h2>
            
            <div class="mt-8 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <p class="text-center text-gray-700 mb-6">
                    Êtes-vous sûr de vouloir vous désinscrire de notre newsletter ?
                </p>
                
                <div class="flex justify-center space-x-4">
                    <form method="POST" action="{{ path('app_newsletter_unsubscribe_confirm', {'token': token}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe' ~ token) }}">
                        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            Confirmer la désinscription
                        </button>
                    </form>
                    <a href="{{ path('app_home') }}" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Annuler
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
