{% extends 'base.html.twig' %}

{% block title %}Nouvelle newsletter{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            {% include 'newsletter_admin/_alerts.html.twig' %}
            
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <h1 class="text-2xl font-bold text-gray-900 mb-6">Créer une nouvelle newsletter</h1>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.subject, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.subject) }}
                    </div>

                    <div>
                        {{ form_label(form.content, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(form.content, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="flex justify-between">
                        <a href="{{ path('app_newsletter_admin_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Retour à la liste
                        </a>
                        <div>
                            <button type="button" id="previewButton" class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Prévisualiser
                            </button>
                            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                                Créer et envoyer
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('newsletter-admin') }}
{% endblock %}
