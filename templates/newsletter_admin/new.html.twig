{% extends 'base.html.twig' %}

{% block title %}Nouvelle newsletter{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12 px-3 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto mb-3">
            {% include 'newsletter_admin/_alerts.html.twig' %}

                <h2 class="text-2xl font-bold text-gray-900 mb-6">
                     Créer une nouvelle newsletter
                </h2>

                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.subject, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1 mb-4">
                            {{ form_widget(form.subject, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.subject) }}
                    </div>

                    <div>
                        {{ form_label(form.content, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1 mb-4">
                            {{ form_widget(form.content, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(form.content) }}
                    </div>

                    <div class="flex justify-between">
                        <div>
                            <button type="button" id="previewButton" class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Prévisualiser
                            </button>
                            <button type="submit" class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Créer et envoyer
                            </button>
                            <button type="button" id="back" class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                <a href="{{ path('app_newsletter_admin_index') }}" style="text-decoration: none;">
                                    Retour à la liste
                                </a>
                            </button>

                        </div>
                    </div>
                {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('newsletter-admin') }}
{% endblock %}
