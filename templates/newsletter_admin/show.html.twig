{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <h1>Newsletter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ newsletter.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ newsletter.subject }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ newsletter.content }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ newsletter.createdAt ? newsletter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsSent</th>
                <td>{{ newsletter.isSent ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_newsletter_admin_index') }}">back to list</a>

    <a href="{{ path('app_newsletter_admin_edit', {'id': newsletter.id}) }}">edit</a>

    {{ include('newsletter_admin/_delete_form.html.twig') }}
{% endblock %}
