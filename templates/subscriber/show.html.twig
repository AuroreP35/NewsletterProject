{% extends 'base.html.twig' %}

{% block title %}Détails de l'abonné{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12 px-3 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto mb-3">
            <h2>Détails de l'abonné</h2>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ subscriber.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ subscriber.email }}</td>
                </tr>
                <tr>
                    <th>Date d'inscription</th>
                    <td>{{ subscriber.createAt ? subscriber.createAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>


            <div class="flex justify-between">
                <div>
                    <button class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <a href="{{ path('app_subscriber_edit', {'id': subscriber.id}) }}" style="text-decoration: none;">
                            Editer
                        </a>
                    </button>
                    <button id="back" class="mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <a href="{{ path('app_newsletter_admin_index') }}" style="text-decoration: none;">
                            Retour à la liste
                        </a>
                    </button>
                    {{ include('subscriber/_delete_form.html.twig') }}
                </div>
            </div>

        </div>

    </div>
{% endblock %}
