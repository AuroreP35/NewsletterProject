{% extends 'base.html.twig' %}

{% block title %}Détails de l'abonné{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6">
                    <h1 class="text-2xl font-bold text-gray-900">Détails de l'abonné</h1>
                </div>
                
                <div class="border-t border-gray-200">
                    <dl>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">ID</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ subscriber.id }}</dd>
                        </div>
                        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Email</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ subscriber.email }}</dd>
                        </div>
                        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Date d'inscription</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ subscriber.createAt ? subscriber.createAt|date('Y-m-d H:i:s') : '' }}</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('app_subscriber_index') }}">back to list</a>

    <a href="{{ path('app_subscriber_edit', {'id': subscriber.id}) }}">edit</a>

    {{ include('subscriber/_delete_form.html.twig') }}
{% endblock %}
